<nav aria-label="You are here:" role="navigation">
  <ul class="breadcrumbs">
    <li><%= link_to "Home", root_path %></li> 
    <li><%= link_to "View Cleanups", cleanups_path %></li>
    <li><%= link_to "State", state_path(@cleanup.state) %></li>
    <li><%= link_to "City", state_city_path(@cleanup.state, @cleanup.city) %></li>
    <li><span class="show-for-sr">Current: </span>Cleanup Log</li>
  </ul>
</nav>

<h1>Cleanup Log</h1>

<div class="callout secondary">
  <h5><%= @cleanup.title %></h5>
</div>

  <table class= "hover">
  <thead>
    <tr>
      <th width="200"></th>
      <th></th>   
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><strong>Date</strong></td> 
      <td><%= @cleanup.date.strftime("%m-%d-%Y") %></td>
    </tr>
    <tr>
      <td><strong>Posted By</strong></td> 
      <td><%= @cleanup.posted_by %></td>
    </tr>     
    <tr>
      <td><strong>City</strong></td> 
      <td><%= @cleanup.city %></td>
    </tr> 
    <tr>
      <td><strong>State</strong></td> 
      <td><%= @cleanup.state %></td>
    </tr>
    <tr>
      <td><strong>Cleanup Type</strong></td> 
      <td><%= @cleanup.cleanup_type %></td>
    </tr> 
    <tr>
      <td><strong>Number of Volunteers</strong></td> 
      <td><%= @cleanup.volunteers %></td>
    </tr> 
    <tr>
      <td><strong>Total Trash (lbs.)</strong></td> 
      <td><%= @cleanup.total_trash %></td>
    </tr> 
    <tr>
      <td><strong>Description</strong></td> 
      <td><%= @cleanup.description %></td>
    </tr>    
  </tbody>
</table>

<div class="grid-container">
  <div class="grid-x grid-margin-x small-up-2 medium-up-4">
    
    <div class="cell">
      <div class="card">
        <div class="card-section">
        <%= image_tag(@cleanup.cleanup_photo.thumb.url, alt: 'Image') if @cleanup.cleanup_photo? %>
        </div>
      </div>
    </div>

  </div>
</div>

<nav class="bottom-bar">
    <div class="bottom-bar-left">
      <ul class="menu">  
      <%= link_to "Back", state_city_path(@cleanup.state, @cleanup.city) %> 
      <% if current_user == @cleanup.user %>
      <%= link_to 'Edit Cleanup', edit_cleanup_path %> 
      <% end %>
      </ul>
    </div>
</nav>